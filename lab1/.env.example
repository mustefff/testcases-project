# MongoDB Atlas Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/

# Database Name
DATABASE_NAME=fakeStoreDB

# MongoDB Connection Options
CONNECT_TIMEOUT=30000
SERVER_SELECTION_TIMEOUT=30000

# Test Configuration
TEST_ENVIRONMENT=development
LOG_LEVEL=INFO

# Test User Credentials (for creating test users)
TEST_USER_PASSWORD=Test@Password123

# API Configuration (if using FakeStore API)
FAKESTORE_API_URL=https://fakestoreapi.com

# Report Configuration
GENERATE_REPORT=true
REPORT_FORMAT=html
SCREENSHOT_ON_FAILURE=false

# Retry Configuration
MAX_RETRY_COUNT=3
RETRY_INTERVAL=1

# Cleanup Configuration
CLEANUP_AFTER_TESTS=true
KEEP_FAILED_TEST_DATA=false

# Security
# Add your MongoDB Atlas IP whitelist here
ALLOWED_IPS=0.0.0.0/0


# Performance Testing
PERFORMANCE_TESTING_ENABLED=false
MAX_CONCURRENT_CONNECTIONS=10
TIMEOUT_SECONDS=30

# Debug Options
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_REQUEST_RESPONSE=false
